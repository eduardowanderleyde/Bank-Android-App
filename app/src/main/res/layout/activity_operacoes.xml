<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tipoOperacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="TIPO DA OPERAÇÃO"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número da Conta Origem"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/numeroContaOrigem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="Spinner"
            android:fontFamily="sans-serif-light"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/labelContaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número da Conta Destino"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/numeroContaDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="Spinner"
            android:fontFamily="sans-serif-light"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:hint="Digite o valor a ser "
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOperacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Realizar Operação"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>